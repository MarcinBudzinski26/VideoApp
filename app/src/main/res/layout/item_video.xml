<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginTop="12dp"
    app:cardCornerRadius="16dp"
    app:cardUseCompatPadding="false"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/vaulto_surface"
    app:rippleColor="@color/vaulto_accent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:padding="15dp"
        android:orientation="horizontal">

        <!-- Vaulto accent bar -->
        <View
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:background="@color/vaulto_accent" />

        <!-- Thumbnail -->
        <ImageView
            android:id="@+id/thumb"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="12dp"
            android:scaleType="centerCrop"
            android:contentDescription="Thumbnail"
            android:adjustViewBounds="true"
            android:background="@drawable/thumb_rounded_bg"
             />

        <!-- Text content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/vaulto_text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/source"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/vaulto_text_secondary"
                android:textSize="12sp"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
